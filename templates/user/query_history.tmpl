#extends document

#def title
KonText - $_('Recent queries')
#end def

#def bodyonload
    require(['${client_model_dir}/${page_model}', 'conf'], function (pageSelf, conf) {
        conf.Data = $to_json($data);
        conf.FromDate = $to_json($from_date);
        conf.ToDate = $to_json($to_date);
        conf.Offset = $to_json($offset);
        conf.Limit = $to_json($limit);
        conf.PageSize = $to_json($page_num_records);
        pageSelf.init(conf);
    });
#end def

#block main
<section>
    <h2>$_('Recent queries')</h2>
    <div id="query-history-mount"></div>
</section>
#end block